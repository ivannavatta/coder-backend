  <h1>Products</h1>
<div class="grid-container">
  {{#each products}}
    <div class="card">
      <img src="{{this.thumbnail}}" alt="Producto Apple">
      <div class="card-body">
        <h3 class="product-title">{{this.name}}</h3>
        <p class="product-description">{{this.description}}</p>
        <div class="product-details">
          <p class="price">${{this.price}}</p>
          <button class="add-to-cart">Agregar al carrito</button>
        </div>
      </div>
    </div>
  {{/each}}

</div>

{{#if hasPrevPage}}
  <a href="/products?page={{prevPage}}{{#if limit}}&limit={{limit}}{{/if}}{{#if sort}}&sort={{sort}}{{/if}}"><button>Anterior</button></a>
{{/if}}

{{#if hasNextPage}}
  <a href="/products?page={{nextPage}}{{#if limit}}&limit={{limit}}{{/if}}{{#if sort}}&sort={{sort}}{{/if}}"><button>Siguiente</button></a>
{{/if}}

