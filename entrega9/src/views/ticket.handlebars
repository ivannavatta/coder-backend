<div class="containerCart">
{{#if productsOutOfStock.length}}
    <h2>Productos en stock:</h2>
            {{#each productsInStock}}
                <div class="cartItem">
                <div class="productInfo">
                    <div class="productImageContainer">
                        <img src="{{this.product.thumbnail}}" class="productImage" alt="{{this.product.name}}" />
                    </div>
                    <div class="productDetails">
                        <div class="titleProduct">
                        <p class="productName">{{this.product.name}}</p>
                        <p class="productStock"> {{this.quantity}}</p>
                        <p class="productPrice">${{multiply this.product.price this.quantity}}</p>
                        </div>
                       <p class="trashIcon" data-pid="{{this.product._id}}">Remove</p>
                        <hr class="lineSeparator">
                        <p class="productDescription">{{this.product.description}}</p>
                        <hr class="lineSeparator">
                        <p class="shippingInfo">Enter your postal code to calculate shipping</p>
                    </div>
                </div>
                <hr class="lineSeparatorProducts">
            </div>
            {{/each}}


<div class="products-out-of-stock">
    <h2>Productos fuera de stock:</h2>
    
            {{#each productsOutOfStock}}
               <div class="cartItem">
                <div class="productInfo">
                    <div class="productImageContainer">
                        <img src="{{this.product.thumbnail}}" class="productImage" alt="{{this.product.name}}" />
                    </div>
                    <div class="productDetails">
                        <div class="titleProduct">
                        <p class="productName">{{this.product.name}}</p>
                        <p class="productStock"> {{this.quantity}}</p>
                        <p class="productPrice">${{multiply this.product.price this.quantity}}</p>
                        </div>
                       <p class="trashIcon" data-pid="{{this.product._id}}">Remove</p>
                        <hr class="lineSeparator">
                        <p class="productDescription">{{this.product.description}}</p>
                    </div>
                </div>
                <hr class="lineSeparatorProducts">
            </div>
            {{/each}}

</div>

  <div class='totalPrice'>
            <h3 class='totalText'> Total </h3>
             <h3></h3>
            <h3></h3>
            <h3></h3>
            <h3 class='totalText'> ${{this.totalPrice}} </h3>
        </div>

       
        <button type="button" id="buyButton">Finalizar compra</button>
        </div>
        {{else}}
        <div class="success-message">
            <h1>Congratulations {{user}}, your purchase was successful!</h1>
            <p class="purchase-code">Your purchase code is: <span>{{ticketCode}}</span></p>
            <p class="email-sent">An email with more details about your purchase has been sent.</p>
        </div>
        {{/if}}
        
       
  <script src="/js/ticket.js"></script>
